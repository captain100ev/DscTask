<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333945"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_background"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/curve_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Saving"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/curve_layout"
            />


        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/layout_background"
            >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Move in to your own house in" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="139 days"
                android:textColor="#000"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_marginBottom="4dp"
                android:text="Today" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/text3"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:background="#333945"
                    app:cardCornerRadius="6dp"
                    app:cardMaxElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#333945">

                        <ImageView
                            android:id="@+id/borderstart"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/sidev" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="10dp"
                            android:layout_toLeftOf="@+id/borderend"
                            android:layout_toRightOf="@+id/borderstart"
                            android:background="#333945"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="12dp"
                                android:gravity="center"
                                android:text="Help us make better suggestions"
                                android:textColor="#8395A7" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="80dp"
                                android:gravity="center"
                                android:text="How many hours do you watch"
                                android:textColor="#fff" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/netflix" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:text="weekly?"
                                android:textColor="#fff" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:weightSum="3">

                                <Button
                                    android:id="@+id/btn1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:background="#616161"
                                    android:onClick="thankToast"
                                    android:text="0hr"
                                    android:textColor="#FFF"
                                    android:textSize="16dp" />

                                <Button
                                    android:id="@+id/btn2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:background="#757575"
                                    android:onClick="thankToast"
                                    android:text="1-5hr"
                                    android:textColor="#FFF"
                                    android:textSize="16dp" />

                                <Button
                                    android:id="@+id/btn3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="4dp"
                                    android:layout_weight="1"
                                    android:background="#9E9E9E"
                                    android:onClick="thankToast"
                                    android:text="5+hr"
                                    android:textColor="#FFF"
                                    android:textSize="16dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/borderend"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:scaleType="fitEnd"
                            android:src="@drawable/sidev" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="6dp"
                    app:cardMaxElevation="8dp"
                    android:onClick="nextLayout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="18dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/sofa" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New mortgage available"
                            android:textColor="#000"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="We've preapproved a new mortgage for you.Check it out"
                            android:textSize="18dp" />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</ScrollView>